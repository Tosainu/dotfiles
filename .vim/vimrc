function! s:load_ycm() abort
  silent! packadd YouCompleteMe
  nnoremap <buffer><silent> <Leader>f  :<C-u>YcmCompleter FixIt<CR>
  nnoremap <buffer><silent> <Leader>gD :<C-u>YcmCompleter GoToDefinition<CR>
  nnoremap <buffer><silent> <Leader>gd :<C-u>YcmCompleter GoToDeclaration<CR>
  nnoremap <buffer><silent> <Leader>t  :<C-u>YcmCompleter GetType<CR>
endfunction
" }}}

" vim-lsc {{{
let g:lsc_enable_incremental_sync = v:true
let g:lsc_server_commands = {
      \   'haskell': 'hie --lsp',
      \   'rust':    'rustup run nightly rls',
      \ }

execute 'autocmd MyVimrc FileType ' .
      \   join(keys(g:lsc_server_commands), ',') . ' call s:set_lsc_keybinds()'
function! s:set_lsc_keybinds() abort
  nnoremap <buffer><silent> <Leader>gd :<C-u>LSClientGoToDefinition<CR>
  nnoremap <buffer><silent> <Leader>t  :<C-u>call <SID>show_hover()<CR>

  function! s:show_hover() abort
    call lsc#file#flushChanges()
    let l:params = lsc#params#documentPosition()
    call lsc#server#userCall('textDocument/hover', l:params, function("<SID>handle_show_hover"))
  endfunction

  function! s:handle_show_hover(result) abort
    if empty(a:result) || empty(a:result.contents)
      echom 'No hover information'
      return
    endif
    let l:contents = a:result.contents
    if type(l:contents) == v:t_list
      let l:contents = l:contents[0]
    endif
    if type(l:contents) == v:t_dict
      let l:contents = l:contents.value
    endif
    echom l:contents
  endfunction
endfunction
" }}}

