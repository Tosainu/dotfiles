#!/usr/bin/env node

var twit = require('twit');
var conf = require(process.env.HOME + '/.twit.js');

var tw = new twit({
  consumer_key        : conf.ck,
  consumer_secret     : conf.cs,
  access_token        : conf.at,
  access_token_secret : conf.as
});

tw.post('statuses/update', {status: process.argv[2]}, function(err) {
  if (err) {
    console.log(err);
  } else {
    console.log('∩(＞◡＜*)∩');
  }
});
