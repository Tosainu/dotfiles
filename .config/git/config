[user]
	name  = Kenta Sato
	email = tosainu.maple@gmail.com
	signingkey = A7E43FF0AF213B5F

[core]
	editor = vim +1
	preloadindex = true
	quotepath = false

[color]
	ui = auto

[alias]
	a     = add
	ap    = add -p
	br    = branch
	cbf   = "!git checkout $(git br --sort=-authordate | grep -Ev '^\\*' | tr -d ' ' | fzy)"
	cl    = clone
	cl1   = clone --depth 1
	co    = commit
	di    = diff
	dic   = diff --cached
	ef    = "!$EDITOR $(git ls-files | fzy)"
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	lg    = !git graph
	lga   = !git graph --all
	lp    = log -p
	mt    = mergetool
	pl    = pull
	pu    = push
	ra    = rebase --abort
	rc    = rebase --continue
	ri    = rebase -i
	rif   = "!git rebase -i $(git graph --color=always | fzy -l 20 | sed 's/\\x1b\\[[0-9;]*[a-zA-Z]//g' | cut -d ' ' -f 2)"
	st    = status
	sw    = switch
	wa    = worktree add
	wl    = worktree list
	wp    = worktree prune --verbose

[merge]
	tool = vimdiff

[commit]
	gpgsign = true

[diff]
	compactionHeuristic = true

[fetch]
	prune = true

[pager]
	diff = /usr/share/git/diff-highlight/diff-highlight | less -x 2
	log  = /usr/share/git/diff-highlight/diff-highlight | less -x 2
	show = /usr/share/git/diff-highlight/diff-highlight | less -x 2

[interactive]
	diffFilter = /usr/share/git/diff-highlight/diff-highlight

[push]
	default = simple

[pull]
	ff = only
	rebase = false

[url "ssh://git@github.com/"]
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "http://github.com/"
	pushInsteadOf = "https://github.com/"

[url "https://github.com/"]
	insteadOf = "git://github.com/"
	insteadOf = "http://github.com/"

[url "ssh://git@gist.github.com/"]
	pushInsteadOf = "git://gist.github.com/"
	pushInsteadOf = "http://gist.github.com/"
	pushInsteadOf = "https://gist.github.com/"

[url "https://gist.github.com/"]
	insteadOf = "git://gist.github.com/"
	insteadOf = "http://gist.github.com/"

[github]
	user = Tosainu

[ghq]
	root = ~/.vim/pack
	root = ~/work

