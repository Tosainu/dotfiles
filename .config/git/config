	signingkey = key::ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIM9pedk5gbKE8K8MxCClMT7yPGNgHu3V3qp1D6Te+KuY

[core]
	editor = vim +1
	preloadindex = true
	quotepath = false

[gpg]
	format = ssh

[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers

[color]
	ui = auto

[alias]
	a     = add
	ap    = add -p
	br    = branch
	cl    = clone
	cl1   = clone --depth 1
	co    = commit
	di    = diff
	dic   = diff --cached
	l     = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	lg    = l --graph
	lga   = l --graph --all
	lp    = log -p
	mt    = mergetool
	pl    = pull
	pu    = push
	ra    = rebase --abort
	rc    = rebase --continue
	ri    = rebase -i
	rif   = "!git l --color=always | fzy -l 20 | sed -E 's/\\x1b\\[[0-9;]*[a-zA-Z]//g; s/^([0-9a-f]+).+$/\\1/' | xargs git rebase -i"
	st    = status
	sw    = switch
	swf   = "!git br --sort=-authordate | sed -E '/^\\*/d; s/^[[:space:]]+//' | fzy | xargs git switch"
	wa    = worktree add
	wl    = worktree list
	wp    = worktree prune --verbose

[init]
	defaultBranch = main

[merge]
	tool = vimdiff

[commit]
	gpgsign = true

[diff]
	compactionHeuristic = true

[fetch]
	prune = true

[push]
	default = simple

[pull]
	ff = only
	rebase = false

